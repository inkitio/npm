{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "es2021", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
